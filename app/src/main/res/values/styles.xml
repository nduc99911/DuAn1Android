<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#37f1ec</item>
        <item name="colorControlActivated">#d94ed0</item>
        <item name="colorControlHighlight">#d94ed0</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="margin8">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="fontNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="fontHienThi">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>
    <style name="fontHienThi2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">10dp</item>

    </style>
</resources>