<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/anh"
    tools:context="vn.poly.quanlybanhang.Fragment.FragmentThem">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayoutThem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            tools:ignore="ExtraText">
    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/custom_toolbar_them">

    </include>

    <TextView
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Thiết lập bán hàng" />
            android:textColor="#FFFFFF" />
            <LinearLayout
                android:background="@drawable/border_thanh"
                android:layout_width="match_parent"
                android:layout_height="5dp">

            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/border_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMatHang"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/goods"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription" />

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:id="@+id/tvMatHang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Mặt hàng" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPhanLoai"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/groceries"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:id="@+id/tvPhanLoai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Phân loại" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDonViTinh"
                android:layout_width="55dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:src="@drawable/justicescale"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:id="@+id/tvDonViTinh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Đơn vị tính" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgNguoiDung"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvNguoiDung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:text="Khách hàng"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/NavigationViewThem"
            android:layout_width="300dp"
            android:background="#2c3c49"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navheader"
            app:menu="@menu/drawer_view"
            android:fitsSystemWindows="false">



        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>