<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2c3c49"
    tools:context=".Activity.DialogThemMatHang" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
android:textColor="#ffffff"
            android:textSize="30dp"
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm Mặt Hàng" />

        <ImageView
            android:id="@+id/imgDiaLogThemMatHangThoat"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_exit"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>
    <LinearLayout
        style="@style/margin8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDiaLogThemMatHang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tất cả mặt hàng :"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnDiaLogThemMatHang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvDiaLogThemMatHang"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>