<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.ThemNguoiDungActivity"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include
        layout="@layout/custom_sua_nguoi_dung">

    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_add" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaTenDangNhap"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Tên Đăng Nhập" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaPassword"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Password" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaRePassword"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Nhập Lại Password" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="370dp"
                android:layout_marginLeft="20dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaEmail"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Email" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="370dp"
                android:layout_marginLeft="20dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaSoDienThoai"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Số Điện Thoại" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="370dp"
                android:layout_marginLeft="20dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaDiaChi"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Địa Chỉ" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
