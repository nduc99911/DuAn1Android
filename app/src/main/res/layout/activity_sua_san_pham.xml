<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2c3c49"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <include
        layout="@layout/custom_toolbar_sua_san_pham">

    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:background="@drawable/border_img"
                android:layout_gravity="center"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_add" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaMaMatHang"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Mã mặt hàng" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edThemTenMatHang"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Tên mặt hàng" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaSoLuong"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Số lượng" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaGiaBan"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Giá bán" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_width="370dp"
                android:layout_height="75dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSuaGiaNhap"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edt"
                    android:hint="Giá nhập" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đơn vị tính" />

                <Spinner
                    android:id="@+id/spnThemDonViTinh"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Danh Mục" />

                <Spinner
                    android:id="@+id/spnThemDanhMuc"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>