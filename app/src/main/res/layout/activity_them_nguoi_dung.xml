<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/anh"
    android:layout_height="match_parent">
    <include
        layout="@layout/custom_toolbar_them_nguoi_dung">

    </include>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgThemAnhNguoiDung"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_follow"
            android:contentDescription="TODO" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edThemTenDangNhap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_edt"
                android:hint="Tên Đăng Nhập" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edThemPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_edt"
                android:inputType="textPassword"
                android:hint="Password" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edThemRePassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:background="@drawable/border_edt"
                android:hint="Nhập Lại Password" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="370dp"
            android:layout_marginLeft="20dp"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edThemEmail"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/border_edt"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edThemSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_edt"
                android:hint="Số Điện Thoại" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edThemHoTen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_edt"
                android:hint="Họ Tên" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>
